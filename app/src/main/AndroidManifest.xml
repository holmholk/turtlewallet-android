<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.turtlecoin.turtlewallet">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LandingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_landing"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WalletActivity"
            android:label=""
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.turtlecoin.turtlewallet.DashboardActivity" />
        </activity>
        <activity
            android:name=".ReceiveCoinActivity"
            android:label="Receive Coins"
            android:parentActivityName=".WalletActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.turtlecoin.turtlewallet.WalletActivity" />
        </activity>
        <activity android:name=".SendCoinActivity"
            android:parentActivityName=".WalletActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.turtlecoin.turtlewallet.WalletActivity" />
        </activity>
    </application>

</manifest>